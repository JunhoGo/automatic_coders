package com.thehowtotutorial.splashscreen;//loading을 그려줌import java.awt.*;class GraphicThread extends Panel implements Runnable{ public GraphicThread() { // setTitle("loading\r\n");  //setForeground(Color.GRAY);  //setBackground(Color.WHITE); }       int x;       Image imgOffScr=null; /* 메모리 버퍼로 쓸 Image */       Graphics grpOffScr=null; /* 메모리 버퍼로 Graphics핸들 */       public void paint(Graphics g){                             /* 메모리 버퍼 만들기 */              imgOffScr=createImage(300,200);               /* 메모리 버퍼에 대한 Graphics 핸들을 얻어 온다. */              grpOffScr=imgOffScr.getGraphics();               /* 메모리 버퍼를 하얗게 지운다. */                         grpOffScr.setColor(Color.white);              grpOffScr.fillRect(0,0,400,400);              grpOffScr.setColor(Color.pink); //채워지는 막대바의 색 설정              grpOffScr.fillRect(20,50,x,10); //위치와 크기를 정한다.              grpOffScr.drawString(x+"%",20,100); //String을 일정 위치에 그린다.              g.drawImage(imgOffScr,0,0,this);  //오프스크린을 그려낸다.       }       public void update(Graphics g){                            paint(g);       //잔상을 남기기위해 update메서드를 오버라이딩한다.       }       public void run(){              for(int i=0; i<=260; i++){                  x=i+20;     //값을 셋팅한다.                  repaint();    //paint메서드 호출..                  try{                      Thread.sleep(10);                   }catch(Exception e){}              }       }}
